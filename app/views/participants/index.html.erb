<h1>Participantes en la categor√≠a <%= @category.title %></h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= link_to participant.nombre_completo, participante_path(participant.id) %></td>
        <td><%= participant.email %></td>
        <td><%= participant.tel %></td>
        <td>
          <% if participant.categories.present? %>
            <% participant.categories.each do |category| %>
              <%= category.title %>
            <% end %>
          <% end %>
        </td>
        <%# link_to 'Show', category_participant_path %>
        <%# link_to 'Edit', edit_category_participant_path(participant) %>
        <%# link_to 'Destroy', category_participant, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

