<div class="msform">
  <%= simple_form_for @subscriber, validate: true do |f| %>
    <%# f.error_notification %>

    <div class="form-inputs">
      <!-- progressbar -->
      <!-- <ul id="progressbar">
        <li class="active">Email</li>
        <li>Name</li>
        <li>Personal Details</li>
        <li>Telephone number</li>
        <li>Category</li>
        <li>Country</li>
      </ul> -->
      <fieldset>
        <%= f.input :email, validate: { presence: true } %>
        <input type="button" name="next" class="next action-button" value="&rtrif;" />
      </fieldset>
      <fieldset>
        <%= f.input :name, :required => 'required' %>
        <!-- <input type="button" name="previous" class="previous action-button" value="Previous" /> -->
        <input type="button" name="next" class="next action-button" value="&rtrif;" />
      </fieldset>
      <fieldset>
        <%= f.input :tel, :required => 'required' %>
        <!-- <input type="button" name="previous" class="previous action-button" value="Previous" /> -->
        <input type="button" name="next" class="next action-button" value="&rtrif;" />
      </fieldset>
      <% if dancer == true %>
        <fieldset>
          <%= f.select :category, options_for_select([ "Belly Dancer", "Profesora danzas del Medio Oriente" ], "Belly Dancer"), :required => 'required' %>
          <!-- <input type="button" name="previous" class="previous action-button" value="Previous" /> -->
          <input type="button" name="next" class="next action-button" value="&rtrif;" />
        </fieldset>
      <% end %>
      <fieldset>
        <%= f.country_select :country, :required => 'required' %>
        <% if dancer == false %>
          <%= f.hidden_field :category, :value => "General" %>
        <% end %>
        <div class="tos-checbox">
          <%= f.check_box :terms_of_service %> <%= I18n.t 'tos.accept' %> <%= link_to "#{I18n.t 'tos.terms'}", page_path(id: 'terms'), :target => '_blank' %><%# link_to I18n.t 'tos.terms', page_path(id: 'terms') %>
        </div>
        <!-- <input type="button" name="previous" class="previous action-button" value="Previous" /> -->
        <!-- <input type="submit" name="submit" class="submit action-button" value="Submit" /> -->
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= f.button :submit, "âœ”", :class => "submit action-button" %>
      </fieldset>
    </div>
  <% end %>
</div>
