<h2>Registrarme para votar</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: "Email", required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caracteres mÃ­nimo" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirmar password", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Crear cuenta" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
