<h1>Categor√≠a <%= @category.title %></h1>
<table>
  <thead>
    <tr>
      <td>Foto</td>
      <td>Nombre de la participante</td>
      <td>Votos</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td></td>
        <td><%= participant.nombre_completo %></td>
        <td><%= participant.votes.count %></td>
        <td>
          <% if user_signed_in? %>
            <%= button_to '+1', upvote_participant_path(:id => participant.id, :category_id => @category.id), method: :post %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
